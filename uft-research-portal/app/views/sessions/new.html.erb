<h1>User Login</h1>

<%= form_for :session, url: sessions_create_path do |f| %>
  <%= render 'shared/error_messages' %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>