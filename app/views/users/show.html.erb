<h2><%= @user.name %></h2>
<h4><%= @user.email %></h4>
<h4><%= @user.role %></h4>

<% if @proposals %>
  <% @proposals.each do |proposal| %>
    <div class="container">
      <h3><%= proposal.title %></h3>

    <% if proposal.experiments %>
      <% proposal.experiments.each_with_index do |experiment, index| %>
      <div class='col-md-10'>
        <div class='panel-group'>
          <div class='panel'>
            <div class='panel-heading'>
              <h4 class='panel-title'>
                <a data-toggle='collapse' data-parent='.panel-group' href='#experiments<%= index %>'><%= experiment.title %></a>
              </h4>
            </div>
            <div id='experiments<%= index %>' class='panel-collapse collapse'>
              <div class='panel-body'>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Title</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.title %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Description</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.description %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Equipment</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.equipment %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Procedure</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.procedure %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Observations</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.observations %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Results</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.results %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <h4>Conclusion</h4>
                  </div>
                  <div class="col-md-10">
                    <p><%= experiment.conclusion %></p>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <% end %>
<% end %>
