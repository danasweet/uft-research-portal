<%= form_for @experiment, url: proposal_experiments_path do |f| %>
  <%= f.label :title %>:
  <%= f.text_area :title, size: '100x2' %><br />

  <%= f.label :description %>:
  <%= f.text_field :description, size: '100x8' %><br />

  <%= f.label :equipment %>:
  <%= f.text_field :equipment, size: '100x8' %><br />

  <%= f.label :procedure %>:
  <%= f.text_field :procedure, size: '100x8' %><br />

  <%= f.hidden_field :researcher_id, :value => session[:user_id] %>

  <%= f.submit %>
<% end %>