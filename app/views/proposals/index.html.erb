<div class="container">

<h1>Proposals</h1>
    <% if @current_user && @current_user.role == "faculty" %>
    <%= link_to "Submit a New Proposal", new_proposal_path, class: 'button'  %>
    <% end %>

  <div class="row">
    <div class='col-md-3 col-md-offset-1'>
      <h3>Department</h3>
    </div>
    <div class='col-md-8 col-offset-1'>
      <h3>Proposal</h3>
    </div>
  </div>
  <% @proposals.reverse.each do |proposal| %>
  <div class="container">
    <div class="row">
      <div class='col-md-1 star'>
        <br>
        <% if proposal.faculty == current_user %>
          <i class='glyphicon glyphicon-star'></i>
        <% end %>
      </div>
      <div class='col-md-3'>
        <br> 
       <h4 class="proposal-department"><%= link_to proposal.department, root_path %></h4>
        </div>

      <div class='col-md-8'>
        <h2><%= link_to proposal.title, proposal_path(proposal) %></h2>
        <p>Posted on: <%= proposal.created_at.strftime("%b %d, %Y") %></p>
        <p>Summary: <%= proposal.summary %></p>
      </div>
    <% end %>
    </div>
  </div>
</div>









